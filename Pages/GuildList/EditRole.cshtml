@page
@model Hubnob.Pages.GuildList.EditRoleModel

@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="GuildMember.Id" />
    <input type="hidden" asp-for="GuildMember.UserId" />
    <input type="hidden" asp-for="GuildMember.GuildId" />

    <div class="form-group">
        <label asp-for="GuildMember.User.UserName">User</label>
        <input asp-for="GuildMember.User.UserName" readonly class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GuildMember.GuildRole.Id" class="control-label">Role</label>
        <select asp-for="GuildMember.GuildRole.Id" class="form-control" asp-items="@(new SelectList(Model.GuildMember.Guild.GuildRoles, "Id", "Name"))"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="./ManageMembers" asp-route-id="@Model.GuildMember.GuildId">Back to Member List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
